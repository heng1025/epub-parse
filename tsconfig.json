{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./types",
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}