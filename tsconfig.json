{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"]
}
